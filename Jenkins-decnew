pipeline{
    agent any
    
    
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'puneeth-sai', url: 'https://github.com/puneeth-sai/warproject.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(['tomcat-new']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/myweb.war  ec2-user@13.126.40.252:/home/ec2-user/apache-tomcat-9.0.56/webapps/
                    
                    ssh ec2-user@13.126.40.252 /home/ec2-user/apache-tomcat-9.0.56/bin/shutdown.sh
                    
                    ssh ec2-user@13.126.40.252 /home/ec2-user/apache-tomcat-9.0.56/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}
